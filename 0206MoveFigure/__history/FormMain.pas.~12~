unit FormMain;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Spin, ExtCtrls;

type
  TIntervalText = class(TForm)
    ColorText: TStaticText;
    SizeText: TStaticText;
    StaticText3: TStaticText;
    StaticText4: TStaticText;
    FigureComboBox: TComboBox;
    ColorDialog: TColorDialog;
    ColorPanel: TPanel;
    SpinEdit1: TSpinEdit;
    SpinEdit2: TSpinEdit;
    procedure ColorPanelClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  IntervalText: TIntervalText;

implementation

{$R *.dfm}

procedure TIntervalText.ColorPanelClick(Sender: TObject);
begin
  ColorDialog.Execute;
  Self.Color := ColorDialog.Color;
end;

end.
